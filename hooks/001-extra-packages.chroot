# Locally built packages
PACKAGES+=(
    console-conf
    probert-common
    probert-network
    subiquitycore
)

case "$(dpkg --print-architecture)" in
    riscv64)
        ;;
    *)
        PACKAGES+=(gdbserver systemd-bootchart)
        ;;
esac

case "$(dpkg --print-architecture)" in
    amd64|i386)
        PACKAGES+=(secureboot-db)
        ;;
esac

apt install --no-install-recommends --allow-downgrades -y "${PACKAGES[@]}"

apt autoremove -y
